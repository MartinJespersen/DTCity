If:
  PathMatch: .*
CompileFlags:
  CompilationDatabase: build
  Add: [/FI../src/includes.hpp, -std=c++20]

Index:
  Background: Build
  StandardLibrary: true

Diagnostics:
  UnusedIncludes: None
  ClangTidy:
    FastCheckFilter: Strict
Hover:
  ShowAKA: true
---
If:
  PathMatch: (src/third_party/.*|src/os_core/linux/.*|src/http/linux/.*)
Diagnostics:
  Suppress: "*"
CompileFlags:
  Add: -ferror-limit=0

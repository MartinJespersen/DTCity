If:
  PathMatch: .*
CompileFlags:
  CompilationDatabase: build
  Add: [/FI../src/includes.hpp]

Index:
  Background: Build
  StandardLibrary: true

Diagnostics:
  UnusedIncludes: None
  Suppress:
    [
      "unused-function",
      "redefinition_different_kind",
      "too_many_args_in_macro_invoc",
    ]
  ClangTidy:
    FastCheckFilter: Strict
Hover:
  ShowAKA: true
---
If:
  PathMatch: (src/third_party/.*|src/os_core/linux/.*|src/http/linux/.*)
Diagnostics:
  Suppress: "*"
CompileFlags:
  Add: -ferror-limit=0

If:
  PathMatch: .*
CompileFlags:
  CompilationDatabase: build
  Add:
    - -IC:/repos/DTCity
    - -IC:/repos/DTCity/src
    - -include=C:/repos/DTCity/src/includes.hpp
    - -IC:/repos/DTCity/src/third_party/glfw/include
    - -IC:/repos/DTCity/src/third_party/ktx/include
    - -IC:/repos/DTCity/src/third_party/freetype_v2_14_1/include
    - -IC:/repos/DTCity/src/third_party/vulkan_sdk_v1_4_309_0/Include

Index:
  Background: Build
  StandardLibrary: true

Diagnostics:
  UnusedIncludes: None
  Suppress:
    [
      "unused-function",
      "redefinition_different_kind",
      "too_many_args_in_macro_invoc",
    ]
  ClangTidy:
    FastCheckFilter: Strict
    Add:
      ["clang-analyzer-deadcode.*", "misc-definitions-in-headers", "bugprone*"]
Hover:
  ShowAKA: true
---
If:
  PathMatch: (src/third_party/.*|src/os_core/linux/.*|src/http/linux/.*)
Diagnostics:
  Suppress: "*"
CompileFlags:
  Add: -ferror-limit=0

{
  "version": 2,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASAN_ENABLED": "ON",
        "BUILD_DEBUG": "ON"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "profile-base",
      "hidden": true,
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/profile",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "TRACY_PROFILE_ENABLE": "ON"
      }
    },
    {
      "name": "debug-windows",
      "displayName": "Debug (Windows)",
      "inherits": "debug-base",
      "generator": "Ninja",
      "cacheVariables": {}
    },
    {
      "name": "debug-linux",
      "displayName": "Debug (Linux)",
      "inherits": "debug-base",
      "generator": "Unix Makefiles"
    },
    {
      "name": "release-windows",
      "displayName": "Release (Windows)",
      "inherits": "release-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "release-linux",
      "displayName": "Release (Linux)",
      "inherits": "release-base",
      "generator": "Unix Makefiles"
    },
    {
      "name": "profile-windows",
      "displayName": "Profile (Windows)",
      "inherits": "profile-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "profile-linux",
      "displayName": "Profile (Linux)",
      "inherits": "profile-base",
      "generator": "Unix Makefiles"
    }
  ],
  "buildPresets": [
    { "name": "debug-windows", "configurePreset": "debug-windows" },
    { "name": "debug-linux", "configurePreset": "debug-linux" },
    { "name": "release-windows", "configurePreset": "release-windows" },
    { "name": "release-linux", "configurePreset": "release-linux" },
    { "name": "profile-windows", "configurePreset": "profile-windows" },
    { "name": "profile-linux", "configurePreset": "profile-linux" }
  ]
}
